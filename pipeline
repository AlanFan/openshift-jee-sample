pipeline {
  agent { label "maven" }
  stages {
    stage("Build WAR") {
      steps {
        dir('mavenapp') {
          sh 'mvn clean package -s settings.xml -Popenshift'
        }
      }
    }
    stage("Build Image") {
      steps {
        dir('mavenapp/target') {
          sh 'oc start-build mavenapp --from-dir . --follow'
        }
      }
    }
  }
}
